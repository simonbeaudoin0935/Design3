	switch(p_uart){

		case UART1:
			//not implemented
			break;

		case UART2:
			UART2_print(p_string);
			break;

		case UART3:
			UART3_print(p_string);
			break;

		case UART4:
			//not implemented
			break;

		default:
			break;
	}

}

